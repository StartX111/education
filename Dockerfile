# Используем официальный образ Node.js
FROM node:18-alpine

# Устанавливаем рабочую директорию внутри контейнера
WORKDIR /app

# Копируем файлы package.json и package-lock.json, чтобы установить зависимости
COPY package*.json ./

# Устанавливаем зависимости
RUN npm install

# Копируем оставшиеся файлы проекта в контейнер
COPY . .

# Открываем порт, используемый BrowserSync (по умолчанию 3000)
EXPOSE 80

# Команда, которая запускается внутри контейнера
CMD ["npm", "run", "gulp"]